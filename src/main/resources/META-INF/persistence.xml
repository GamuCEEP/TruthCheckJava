<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="TruthCheckJava">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>logic.ActorStats</class>
    <class>logic.User</class>
    <class>logic.Item</class>
    <class>logic.Interaction</class>
    <class>logic.Map</class>
    <class>logic.Stage</class>
    <class>logic.Event</class>
    <class>logic.Actor</class>
    <class>logic.Effect</class>
    <class>logic.Relation</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/truthcheckjava?zeroDateTimeBehavior=CONVERT_TO_NULL"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
